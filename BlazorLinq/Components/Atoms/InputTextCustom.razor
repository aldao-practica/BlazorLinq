@* @typeparam string *@

<InputText id="@Id" class="form-control" 
           @bind-Value="Value" 
           @oninput="HandleInputChange"
           style="border: solid red 1px;" />

@code {
    [Parameter] public string Id { get; set; } = string.Empty;
	[Parameter] public string Value { get; set; } = string.Empty;

	[Parameter] public EventCallback<string> ValueChanged { get; set; }

	protected override async Task OnInitializedAsync()
	{
		Console.WriteLine($"OnInitializedAsync is called in InputTextCustom CurrentCount is {Value}.");
		await base.OnInitializedAsync();
	}

	protected override void OnParametersSet()
	{
		Console.WriteLine("OnParametersSet is called. CurrentCount is " + Value);
		base.OnParametersSet();
	}

	private async Task HandleInputChange(ChangeEventArgs e)
	{
		if (e.Value is string newValue)
		{
			await ValueChanged.InvokeAsync(newValue);
		}
	}
}
