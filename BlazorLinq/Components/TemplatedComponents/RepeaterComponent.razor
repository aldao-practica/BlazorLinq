@code {
    [Parameter]
    public required RenderFragment Header { get; set; }
    [Parameter]
    public required RenderFragment<TItem> Row { get; set; }
    [Parameter]
    public required List<TItem> Items { get; set; } 
    [Parameter]
    public required RenderFragment Footer { get; set; }
    [Parameter]
    public RenderFragment<TItem> ?EditTemplate { get; set; }
    [Parameter]
    public TItem ?ItemToEdit { get; set; }
}
